<mapper namespace="com.example.secondProject.mapper.CommentMapper">

    <select id="findByArticleId">
        SELECT * FROM comment WHERE article_id = #{articleId};
    </select>

    <insert id="save"><![CDATA[
        INSERT INTO comment(article_id, nickname, body) VALUES(#{id}, #{nickname}, #{body});
    ]]></insert>

    <update id="update"><![CDATA[
        UPDATE comment SET nickname=#{nickname}, body=#{body} WHERE id = #{id}
    ]]></update>

    <delete id="delete"><![CDATA[
        DELETE FROM comment WHERE id = #{id};
    ]]></delete>

